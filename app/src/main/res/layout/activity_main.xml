<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="anartzmugika.animations.MainActivity">


    <Button
        android:text="BLINK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/blinkButton" />

    <Button
        android:text="MOVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/moveButton" />

    <Button
        android:text="FADE IN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blinkButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/fadeInButton" />

    <Button
        android:text="ROTATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fadeInButton"
        android:layout_alignLeft="@+id/moveButton"
        android:layout_alignStart="@+id/moveButton"
        android:id="@+id/rotateButton" />

    <Button
        android:text="FADE OUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rotateButton"
        android:layout_alignLeft="@+id/bounceButton"
        android:layout_alignStart="@+id/bounceButton"
        android:id="@+id/fadeOutButton" />

    <Button
        android:text="SECUENTIAL"
        android:layout_marginBottom="60sp"
        android:layout_above="@+id/zoomOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/secuentialButton" />

    <Button
        android:text="ZOOM IN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14sp"
        android:layout_above="@+id/slideDownButton"
        android:layout_centerInParent="true"
        android:id="@+id/zoomInButton" />

    <Button
        android:text="ZOOM OUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="14dp"
        android:id="@+id/zoomOutButton" />

    <Button
        android:text="SLIDE UP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/slideUpButton" />

    <Button
        android:text="SLIDE DOWN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/slideDownButton" />

    <Button
        android:text="RANDOM"
        android:layout_marginBottom="14sp"
        android:layout_above="@id/slideDownButton"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/randomAnimation" />

    <Button
        android:text="BOUNCE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bounceButton"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/randomAnimation"
        android:layout_alignStart="@+id/randomAnimation" />

    <ImageView
        android:layout_marginBottom="20sp"
        android:layout_above="@+id/randomAnimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@color/colorPrimaryDark"
        android:layout_below="@+id/fadeInButton"
        android:layout_marginTop="15dp"
        android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
